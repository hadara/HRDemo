{% extends "base.jinja2" %}
{% block content %}

    <h3>Jobs</h3>

    <a class="btn btn-default" href="{{ request.route_url('group_add') }}" role="button">Add Group</a>
    <hr>

    <table class="table">
            <thead>
                <tr>
                  <th><a href="{{ request.route_url('group_view') + '?sort=sec_group_groupname' }}">Group Name</a></th>
                </tr>
            <tbody>
                {% for group in records %}
                <tr>
                    <td><a href="{{ request.route_url('group_edit', gro_id=group.id) }}">
                            {{ group.groupname }} </a></td>
                </tr>
                {% endfor %}
            </tbody>
    </table>
    <ul class="pagination pagination-center">
        <li>{{ records.pager(format='$link_first$link_previous~2~$link_next$link_last',
                curpage_attr={ 'class':'active' },
                dotdot_attr={ 'class':'disabled' })|safe }}</li>
    </ul>



{% endblock %}