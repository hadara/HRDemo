{% extends "base.jinja2" %}
{% block content %}

    <h3>Country</h3>


    <div class="well">

        <form action="" method="post" name="CountryForm">

          {% include 'form_error.jinja2' %}

          <div class="form-group">
            {{ form.country_id.label }}
            {{ form.country_id(size=2) }}
          </div>
          <div class="form-group">
            {{ form.country_name.label }}
            {{ form.country_name(size=40) }}
          </div>
          <div class="form-group">
            {{ form.region.label }}
            {{ form.region() }}
          </div>

          <div class="form-group">
              <button type="submit" class="btn btn-default">Submit</button>
         </div>
        </form>

    </div>
{% endblock %}