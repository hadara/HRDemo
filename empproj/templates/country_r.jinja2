{% extends "base.jinja2" %}
{% block content %}

    <h3>Countries</h3>

    <a class="btn btn-default" href="{{ request.route_url('country_add') }}" role="button">Add Country</a>
    <hr>

    <table class="table">
            <thead>
                <tr>
                  <th><a href="{{ request.route_url('country_view') + '?sort=hr_countries_country_id' }}">Country Label</a></th>
                  <th><a href="{{ request.route_url('country_view') + '?sort=hr_countries_country_name' }}">Country Name</a></th>
                  <th><a href="{{ request.route_url('country_view') + '?sort=hr_regions_region_name' }}">Region</a></th>
                </tr>
            <tbody>
                {% for country, region in countries %}
                <tr>
                    <td><a href="{{ request.route_url('country_edit', con_id=country.country_id) }}">
                            {{ country.country_id }} </a></td>
                    <td><a href="{{ request.route_url('country_edit', con_id=country.country_id) }}">
                            {{ country.country_name }} </a></td>
                    <td> {{ region.region_name }} </td>
                </tr>
                {% endfor %}
            </tbody>
    </table>
    <ul class="pagination pagination-center">
        <li>{{ countries.pager(format='$link_first$link_previous~2~$link_next$link_last',
                curpage_attr={ 'class':'active' },
                dotdot_attr={ 'class':'disabled' })|safe }}</li>
    </ul>



{% endblock %}