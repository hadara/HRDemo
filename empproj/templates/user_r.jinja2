{% extends "base.jinja2" %}
{% block content %}

<h3>Users</h3>

    <table class="table">
            <thead>
                <tr>
                  <th><a href="{{ request.route_url('user_view') + '?sort=sec_user_username' }}">Username</a></th>
                </tr>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td><a href="{{ request.route_url('user_edit', usr_id=user.id) }}">
                             {{ user.username }} </a></td>

                    </tr>
                {% endfor %}
            </tbody>
    </table>
    <ul class="pagination pagination-center">
        <li>{{ users.pager(format='$link_first$link_previous~2~$link_next$link_last',
                curpage_attr={ 'class':'active' },
                dotdot_attr={ 'class':'disabled' })|safe }}</li>
    </ul>

{% endblock %}