{% extends "base.jinja2" %}
{% block content %}

    <h3>Jobs</h3>

    <a class="btn btn-default" href="{{ request.route_url('job_add') }}" role="button">Add Job</a>
    <hr>

    <table class="table">
            <thead>
                <tr>
                  <th><a href="{{ request.route_url('job_view') + '?sort=hr_jobs_job_title' }}">Job Title</a></th>
                  <th><a href="{{ request.route_url('job_view') + '?sort=hr_jobs_min_salary' }}">Min Salary</a></th>
                  <th><a href="{{ request.route_url('job_view') + '?sort=hr_jobs_max_salary' }}">Max Salary</a></th>
                </tr>
            <tbody>
                {% for job in jobs %}
                <tr>
                    <td><a href="{{ request.route_url('job_edit', job_id=job.job_id) }}">
                            {{ job.job_title }} </a></td>
                    <td> {{ job.min_salary }} </a></td>
                    <td> {{ job.max_salary }} </td>
                </tr>
                {% endfor %}
            </tbody>
    </table>
    <ul class="pagination pagination-center">
        <li>{{ jobs.pager(format='$link_first$link_previous~2~$link_next$link_last',
                curpage_attr={ 'class':'active' },
                dotdot_attr={ 'class':'disabled' })|safe }}</li>
    </ul>



{% endblock %}