{% extends "base.jinja2" %}
{% block content %}

    <h3>Regions</h3>


    <a class="btn btn-default" href="{{ request.route_url('region_add') }}" role="button">Add Region</a>
    <hr>

    <table class="table">
            <thead>
                <tr>
                  <th><a href="{{ request.route_url('region_view') + '?sort=hr_regions_region_name' }}">Region Name</a></th>
                </tr>
            <tbody>
                {% for region in regions %}
                <tr>
                    <td><a href="{{ request.route_url('region_edit', reg_id=region.region_id) }}">
                          {{ region.region_name }} </a></td>
                </tr>
                {% endfor %}
            </tbody>
    </table>
    <ul class="pagination pagination-center">
        <li>{{ regions.pager(format='$link_first$link_previous~2~$link_next$link_last',
                curpage_attr={ 'class':'active' },
                dotdot_attr={ 'class':'disabled' })|safe }}</li>
    </ul>



{% endblock %}